{% extends 'admin/layout.html.twig' %}
{% block content %}
    
    <h1>Cr√©ation d'un article</h1>

    {{ form_start(formArticle) }}

    {{ form_row(formArticle.title, {'attr': {'placeholder': "Titre de l'article"}}) }}
    {{ form_row(formArticle.category) }}
    {{ form_row(formArticle.content, {'attr': {'placeholder': "Contenu de l'article"}}) }}
    {{ form_row(formArticle.file, {'attr': {'placeholder': "Image de l'article"}}) }}
    {{ form_row(formArticle.isActive, {'attr': {'placeholder': "Public"}}) }}


    <button type="submit" class="btn btn-primary">
    {% if editMode %}
    Enregistrer les modifications
    {% else %}
    Ajouter l'article
    {% endif %}
    </button>
    {{ form_end(formArticle) }}
{% endblock %}