{% extends "site/blog/layout.html.twig" %}

{% block title %}Actus{% endblock %}

{% block blogContent %}
<h1>Actus</h1>

{% for article in articles %}

<div class="card mb-4">
<img src="{{ asset(article.image) }}" alt="{{ article.title }}" class="card-img-top">
    <div class="card-body">
        <h2 class="card-title">{{article.title}}</h2>
        <p>{{article.createdAt| date('d-m-Y H:i')}} - <a href="#" class="badge badge-primary">{{article.category.title}}</a></p>
        <p class="card-text">{{article.content}}</p>
        <a href="#" class="btn btn-primary">Lire la suite</a>
    </div>
</div>
    {% else %}
        <h2>Il n'y a aucun article</h2>
{% endfor %}
{{ knp_pagination_render(articles)}}
{% endblock %}